<Window x:Class="UNO_Client.GameMainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UNO_Client"
        mc:Ignorable="d"
        xmlns:Lang="clr-namespace:UNO_Client.Properties"
        
        Title="GameMainMenuWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="RecursosDeImagen/fondoNegro.jpg"/>
        </Grid.Background>
        <Button Content="{x:Static Lang:Language_en.Btn_createRoom}" HorizontalAlignment="Left" Margin="335,114,0,0" VerticalAlignment="Top" Width="92" Click="Btn_CreateRoom"/>
        <Button Content="{x:Static Lang:Language_en.Btn_Join}" HorizontalAlignment="Left" Margin="335,163,0,0" VerticalAlignment="Top" Width="92" Click="Btn_Join"/>
        <Button Content="{x:Static Lang:Language_en.Btn_Scorers}" HorizontalAlignment="Left" Margin="335,206,0,0" VerticalAlignment="Top" Width="92" Click="Btn_Scorers"/>
        <Button Content="{x:Static Lang:Language_en.BtnBack}" HorizontalAlignment="Left" Margin="335,286,0,0" VerticalAlignment="Top" Width="92" Click="Btn_Back"/>

    </Grid>
</Window>
