<Window x:Class="UNO_Client.RecoverPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UNO_Client"
        mc:Ignorable="d"
        xmlns:Lang="clr-namespace:UNO_Client.Properties"
        
        Title="RecoverPassword" Height="250" Width="500">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="RecursosDeImagen/fondoNegro.jpg"/>
        </Grid.Background>
        <Label Content="{x:Static Lang:Language_en.LbSendEmail}" Foreground="White" HorizontalAlignment="Left" Margin="92,27,0,0" VerticalAlignment="Top" Width="303"/>
        <TextBox x:Name="tb_Email"  HorizontalAlignment="Left" Height="24" Margin="92,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="303"/>
        <Button Content="{x:Static Lang:Language_en.Btn_SendMeEmail}" HorizontalAlignment="Left" Margin="92,167,0,0" VerticalAlignment="Top" Width="131" Click="Btn_SendMeEmail"/>
        <Button Content="{x:Static Lang:Language_en.BtnBack}" HorizontalAlignment="Left" Margin="320,167,0,0" VerticalAlignment="Top" Width="75" Click="Btn_Back"/>

    </Grid>
</Window>
