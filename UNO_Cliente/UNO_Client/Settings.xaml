<Window x:Class="UNO_Client.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UNO_Client"
        mc:Ignorable="d"

        Title="Settings" Height="250" Width="400">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="ResourcesOfImage/fondoNegro.jpg"/>
        </Grid.Background>
        <Button Name="Btn_Audio" Content="{Binding BtnAudio, Source={StaticResource IdiomasRes}}" HorizontalAlignment="Left" Margin="155,55,0,0" VerticalAlignment="Top" Width="75" Click="Btn_Audio_Click"/>
        <Button Name="Btn_Language" Content="{Binding BtnLanguage, Source={StaticResource IdiomasRes}}" HorizontalAlignment="Left" Margin="155,105,0,0" VerticalAlignment="Top" Width="75" Click="Btn_Language_Click"/>
        <Button Name="Btn_Back" Content="{Binding BtnBack, Source={StaticResource IdiomasRes}}" HorizontalAlignment="Left" Margin="155,155,0,0" VerticalAlignment="Top" Width="75" Click="Btn_Back_Click"/>

    </Grid>
</Window>
