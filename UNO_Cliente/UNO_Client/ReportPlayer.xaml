<Window x:Class="UNO_Client.ReportPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UNO_Client"
        mc:Ignorable="d"
        xmlns:Lang="clr-namespace:UNO_Client.Properties"
        
        Title="ReportPlayer" Height="450" Width="400">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="RecursosDeImagen/fondoNegro.jpg"/>
        </Grid.Background>
        <CheckBox Content="{x:Static Lang:Language_en.CB_NegativeActtitude}" Foreground="White" HorizontalAlignment="Left" Margin="46,75,0,0" VerticalAlignment="Top"/>
        <CheckBox Content="{x:Static Lang:Language_en.CB_VerbalAbuse}" Foreground="White" HorizontalAlignment="Left" Margin="46,141,0,0" VerticalAlignment="Top"/>
        <CheckBox Content="{x:Static Lang:Language_en.CB_Leaving}" Foreground="White" HorizontalAlignment="Left" Margin="46,201,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
