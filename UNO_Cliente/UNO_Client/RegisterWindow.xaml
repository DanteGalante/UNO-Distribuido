        xmlns:local="clr-namespace:UNO_Client"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="500
        ">
    <Grid>
        <Label Content="Registrar nuevo usuario" HorizontalAlignment="Left" Margin="179,36,0,0" VerticalAlignment="Top"/>
        <Label Content="Nombre de usuario" HorizontalAlignment="Left" Margin="79,93,0,0" VerticalAlignment="Top"/>
        <Label Content="Contraseña" HorizontalAlignment="Left" Margin="122,142,0,0" VerticalAlignment="Top"/>
        <Label Content="Nombre(s)" HorizontalAlignment="Left" Margin="126,190,0,0" VerticalAlignment="Top"/>
        <Label Content="Apellidos" HorizontalAlignment="Left" Margin="133,243,0,0" VerticalAlignment="Top"/>
        <Label Content="Avatar" HorizontalAlignment="Left" Margin="148,324,0,0" VerticalAlignment="Top"/>
        <Label Content="Correo electronico" HorizontalAlignment="Left" Margin="84,286,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tb_Username" HorizontalAlignment="Left" Height="23" Margin="197,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
