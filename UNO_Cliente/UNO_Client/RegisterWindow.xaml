        <TextBox x:Name="tb_LastName" HorizontalAlignment="Left" Height="23" Margin="197,246,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tb_Email" HorizontalAlignment="Left" Height="23" Margin="197,289,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="139"/>
        <Button x:Name="btn_LoadImage" Content="Cargar imagen" HorizontalAlignment="Left" Margin="197,330,0,0" VerticalAlignment="Top" Width="117" Click="btn_LoadImage_Click"/>
        <Button x:Name="btn_RegisterNewUser" Content="Registrar" HorizontalAlignment="Left" Margin="287,374,0,0" VerticalAlignment="Top" Width="75" Click="Btn_RegisterNewUser_Click"/>
        <Button x:Name="btn_Back" Content="Regresar" HorizontalAlignment="Left" Margin="117,374,0,0" VerticalAlignment="Top" Width="75" Click="Btn_Back_Click"/>
        <Label x:Name="lb_RegistrationError" Content="" HorizontalAlignment="Left" Margin="93,67,0,0" VerticalAlignment="Top" Width="294" Background="#00000000" Foreground="Red"/>
