<Window x:Class="UNO_Client.VerificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UNO_Client"
        mc:Ignorable="d"
        xmlns:lang="clr-namespace:UNO_Client.Properties"
        Title="VerificationWindow" Height="249" Width="396.727">
    <Grid Margin="0,0,2,0">
        <Grid.Background>
            <ImageBrush ImageSource="RecursosDeImagen/fondoNegro.jpg"/>
        </Grid.Background>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="49,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="289"/>
        <Label Content="{x:Static lang:Language_en.LbVerification}" Foreground="White" HorizontalAlignment="Left" Margin="49,70,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Btn_Verify" Content="{x:Static lang:Language_en.Btn_Verification}" HorizontalAlignment="Left" Margin="263,161,0,0" VerticalAlignment="Top" Width="75" Click="Btn_Verify_Click"/>
        <Button x:Name="Btn_Back" Content="{x:Static lang:Language_en.BtnBack}" HorizontalAlignment="Left" Margin="183,161,0,0" VerticalAlignment="Top" Width="75" Click="Btn_Back_Click"/>
    </Grid>
</Window>
